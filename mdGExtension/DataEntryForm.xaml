<Window x:Class="mdGExtension.DataEntryForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mdGExtension"
             mc:Ignorable="d" Title="Configure Markdown Properties"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock x:Name="XMLPath"/>
        <TextBox x:Name="OutputPath"/>
        <CheckBox x:Name="GenerateMarkdown">Generate Markdown during Post-build</CheckBox>
    </StackPanel>
    
</Window>
